<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path %>

<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {
        renderTo: "items_chart"
      },
      title: {
        text: "Packets"
      },
      xAxis: {
        title: {
          text: "xAxis"
        }
      },
      yAxis: {
        title: {
          text: "yAxis"
        }
     },
	    series: [{
       // pointInterval: <%= 1.day * 1000 %>,
       //   pointStart: <%= 3.months.ago.to_i * 1000 %>,
       data: <%= @items.count %>,
       color: '#580000'
	      
	    }]
   });
  });
</script>
<div id="items_chart" style="width:560px; height:300px;"></div>
